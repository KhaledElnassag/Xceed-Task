@model IEnumerable<Empployee>
@{
	ViewData["Title"] = "All Empployees";
}


<h1>All Employees</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create new Employee</a>

@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<td>@Html.DisplayNameFor(E=>E.NationalId)</td>
				<td>@Html.DisplayNameFor(E=>E.Name)</td>
				<td>@Html.DisplayNameFor(E=>E.DateofBirth)</td>
				<td>@Html.DisplayNameFor(E=>E.Age)</td>
				<td>@Html.DisplayNameFor(E=>E.Account)</td>
				<td>@Html.DisplayNameFor(E=>E.LineOfBusiness)</td>
				<td>@Html.DisplayNameFor(E=>E.Language)</td>
				<td>@Html.DisplayNameFor(E=>E.LanguageLevel)</td>
				@if (ViewData["User"] as string == "Admin")
				{
					<td>Update</td>
				}
				<td>Delete</td>

			</tr>
		</thead>
		<tbody>
			@foreach (var Employee in Model)
			{

				<tr>
					<td>@Employee.NationalId</td>
					<td>@Employee.Name</td>
					<td>@Employee.DateofBirth.ToShortDateString()</td>
					<td>@Employee.Age</td>
					<td>@Employee.Account.AccountName</td>
					<td>@Employee.LineOfBusiness</td>
					<td>@Employee.Language</td>
					<td>@Employee.LanguageLevel</td>
					@if(ViewData["User"]as string =="Admin"){
					<td>
						<a asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-success">
							<i class="fas fa-edit"></i>Update
						</a>
					</td>
					}
					<td>
						<a asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger">
							<i class="fas fa-trash"></i>Delete
						</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-4 alert alert-warning">
		<h3>There Is No Employees Yet!!</h3>
	</div>
}
