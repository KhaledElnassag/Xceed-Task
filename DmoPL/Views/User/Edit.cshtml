
@model UserViewModel
@{
    ViewData["Title"] = "Edit";
	var UserRoles = new SelectList(ViewData["UserRole"] as IEnumerable<IdentityRole>, "Name", "Name");
}

<h1>Edit User</h1>
<br />
<br />
<form asp-action="Edit">
	<div asp-validation-summary="All"></div>
	<input hidden asp-for="Email" class="form-control" />


	<div class="form-group">
		<label class="col-form-label">FName</label>
		<input asp-for="FName" class="form-control" />
		<span asp-validation-for="FName" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label class="col-form-label">LName</label>
		<input asp-for="LName" class="form-control" />
		<span asp-validation-for="LName" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label class="col-form-label" >Role</label>
		<select asp-for="Role" asp-items="@UserRoles"></select>
	</div>

	<input type="submit" value="Save" class="btn btn-primary" /> |
	<a asp-action="Index" class="btn btn-light">Back To List</a>

</form>

@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial"/> 

}

